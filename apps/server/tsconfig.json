{
  "compilerOptions": {
    "target": "ES6",                              // Keep the target to ES6 or higher
    "module": "commonjs",                         // CommonJS for Node.js compatibility
    "outDir": "./dist",                           // Output directory for compiled files
    "rootDir": "./src",                           // Specify the root directory of input files
    "strict": true,                               // Enable strict type checking
    "esModuleInterop": true,                      // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                         // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,    // Ensure consistent file naming
    "sourceMap": true,                            // Generate source maps
    "declaration": true,                          // Generate .d.ts files for types
    "moduleResolution": "node",                   // Use Node.js resolution strategy
    "noImplicitAny": true,                        // Raise error on expressions and declarations with an implied 'any' type
    "isolatedModules": true                        // Ensure that each file can be safely transpiled independently
  },
  "include": [
    "./src"                                       // Include all files in the src directory
  ],
  "exclude": [
    "node_modules",                      // Exclude node_modules directory
    "dist"                                        // Exclude the output directory
  ]
}
